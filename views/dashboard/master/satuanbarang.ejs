</div>


<!-- Tombol Tambah-->
<button class="tombol-tambah btn btn-primary" data-toggle="modal" data-target="#tambahModal">
    <i class="fa-solid fa-plus"></i> Tambah Satuan
</button>


<!-- Tambah Satuan Modal-->
<div class="modal fade" id="tambahModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Satuan</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="user" method="post" id="tambahSatuan">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" id="namaSatuan" name="namaSatuan" placeholder="Masukan satuan barang...." required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Edit Satuan Modal-->
<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Satuan</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="user" method="post" id="editSatuan">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" id="namaSatuanEdit" name="namaSatuan" placeholder="Masukan satuan barang...." required>
                        <input type="hidden" id="id" name="id">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Delete Satuan Modal-->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Satuan</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="user" method="post" id="deleteSatuan">
                <div class="modal-body">
                    <h5 class="namaSatuanDelete"></h5>
                    <input type="hidden" id="id" name="id">
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>

                </div>
            </form>
        </div>
    </div>
</div>


<!-- Page level plugins -->
<script src="/public/sbadmin/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/public/sbadmin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="/public/main/dataTables.rowReorder.min.js"></script>
<script src="/public/main/dataTables.responsive.min.js"></script>
<script>
    $(document).ready(function() {


        console.log("run_datatables");

        if (typeof $.fn.DataTable === "undefined") {
            return;
        }
        if (typeof $("#dataTable") === null) {
            return;
        }
        var tableSatuan = $('#dataTable').DataTable({
            // dom: "Bfrtip",
            ajax: {
                url: window.location.href + '?jsonTrue=1',
                dataSrc: 'data'
            },
            columns: [{
                data: '_id'
            }, {
                data: 'namaSatuan'
            }, {
                data: null,
                render: function(data) {
                    return `<div class='d-inline'>
                        <button class='btn btn-info btn-sm' data-toggle="modal" data-target="#EditModal" data-whatever="${JSON.stringify({id: data._id, namaSatuan: data.namaSatuan}).replaceAll('"',"'")}">Edit</button>
                        <button class='btn btn-danger btn-sm' data-toggle="modal" data-target="#DeleteModal" data-whatever="${JSON.stringify({id: data._id,namaSatuan: data.namaSatuan}).replaceAll('"',"'")}">Hapus</button>
                    </div>`
                }
            }, ],
            columnDefs: [{
                searchable: false,
                orderable: false,
                targets: 0,
            }, ],
            order: [
                [1, 'asc']
            ],
        });

        tableSatuan.on('order.dt search.dt', function() {
            let i = 1;

            tableSatuan.cells(null, 0, {
                search: 'applied',
                order: 'applied'
            }).every(function(cell) {
                this.data(i++);
            });
        }).draw();


        $('#tambahSatuan').submit(function(event) {
            event.preventDefault()

            const namaSatuan = this.elements['namaSatuan'].value


            if (namaSatuan.length > 0) {
                $.ajax({
                    url: window.location.href,
                    data: {
                        namaSatuan
                    },
                    method: 'POST',
                    datatype: 'json',
                    success: function(data) {
                        if (data.msg == 'success') {
                            const dataSatuan = data.response
                            console.log(dataSatuan)
                            $('#tambahModal').modal('hide')
                            tableSatuan.ajax.reload(null, false);
                            $('#statusBerhasil').removeClass('d-none')
                        } else {
                            alert(data.msg)

                        }
                    }
                })
            }


        })


        $('#editSatuan').submit(function(event) {
            event.preventDefault()

            const namaSatuan = this.elements['namaSatuanEdit'].value
            const id = this.elements['id'].value
            console.log({
                id,
                namaSatuan
            })


            if (namaSatuan.length > 0 && id.length > 0) {
                $.ajax({
                    url: window.location.href,
                    data: {
                        id,
                        namaSatuan
                    },
                    method: 'PUT',
                    datatype: 'json',
                    success: function(data) {
                        if (data.msg == 'success') {
                            const dataSatuan = data.response
                            $('#EditModal').modal('hide')
                            tableSatuan.ajax.reload(null, false);
                            $('#statusBerhasil').removeClass('d-none')

                        } else {
                            alert(data.msg)

                        }
                    }
                })
            }


        })


        $('#deleteSatuan').submit(function(event) {
            event.preventDefault()

            const id = this.elements['id'].value
            console.log({
                id,
                url: window.location.href
            })


            if (id.length > 0) {
                $.ajax({
                    url: window.location.href,
                    data: {
                        id
                    },
                    method: 'DELETE',
                    datatype: 'json',
                    success: function(data) {
                        if (data.msg == 'success') {
                            const dataSatuan = data.response
                            $('#DeleteModal').modal('hide')
                            tableSatuan.ajax.reload(null, false);
                            $('#statusBerhasil').removeClass('d-none')

                        } else {
                            alert(data.msg)

                        }
                    }
                })
            }


        })


        $('#EditModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var recipient = button.data('whatever') // Extract info from data-* attributes
                // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
                // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            const dataJson = JSON.parse(recipient.replaceAll("'", '"'))
                //modal.find('.modal-title').text('New message to ' + recipient)
            modal.find('.modal-body input').val(dataJson.namaSatuan)
            modal.find('.modal-body input[type=hidden]').val(dataJson.id)
        })
        $('#DeleteModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var recipient = button.data('whatever') // Extract info from data-* attributes
                // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
                // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            const dataJson = JSON.parse(recipient.replaceAll("'", '"'))
                //modal.find('.modal-title').text('New message to ' + recipient)
            modal.find('.modal-body .namaSatuanDelete').text('Apakah anda yakin ingin menghapus ' + dataJson.namaSatuan)
            modal.find('.modal-body input[type=hidden]').val(dataJson.id)
        })

    });
</script>
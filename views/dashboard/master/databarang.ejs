    </div>


</div>


<!-- Tombol Tambah-->
<button class="tombol-tambah btn btn-primary" data-toggle="modal" data-target="#tambahModal">
    <i class="fa-solid fa-plus"></i> Tambah Data
</button>


<!-- Tambah Data Modal-->
<div class="modal fade" id="tambahModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Data</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="user" method="post" id="tambahData">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" class="form-control m-2" id="namaBarang" name="namaBarang" placeholder="Masukan Data barang...." required>
                        <select name="jenisBarang" id="jenisBarang" class="form-control m-2" required>
                            <option hidden selected value=''>Pilih Jenis Barang</option>
                            <% jenis.forEach(element=> { %>
                                <option value="<%= element._id %>">
                                    <%= element.namaJenis %>
                                </option>
                                <% }) %>
                        </select>
                        <div class="row">
                            <div class="col">
                                <input type="number" class="form-control m-2" id="stokBarang" min="0" name="stokBarang" placeholder="Stok Awal" required>
                            </div>
                            <div class="col">
                                <input type="number" class="form-control m-2" id="stokBarangMinimal" min="0" name="stokBarangMinimal" placeholder="Stok Minimal" required>
                            </div>
                        </div>
                        <select name="satuanBarang" id="satuanBarang" class="form-control m-2" required>
                            <option hidden selected value=''>Pilih Satuan Barang</option>
                            <% satuan.forEach(element=> { %>
                                <option value="<%= element._id %>">
                                    <%= element.namaSatuan %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Edit Data Modal-->
<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Data</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="user" method="post" id="editData">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="namaBarangEdit">Nama Barang</label>
                        <input type="text" class="form-control m-2" id="namaBarangEdit" name="namaBarangEdit" placeholder="Masukan Data barang...." required>
                    </div>
                    <select name="jenisBarangEdit" id="jenisBarangEdit" class="form-control m-2" required>
                            <option hidden selected value=''>Pilih Jenis Barang</option>
                            <% jenis.forEach(element=> { %>
                                <option value="<%= element._id %>">
                                    <%= element.namaJenis %>
                                </option>
                                <% }) %>
                        </select>
                    <select name="satuanBarangEdit" id="satuanBarangEdit" class="form-control m-2" required>
                            <option hidden selected value=''>Pilih Satuan Barang</option>
                            <% satuan.forEach(element=> { %>
                                <option value="<%= element._id %>">
                                    <%= element.namaSatuan %>
                                </option>
                                <% }) %>
                        </select>
                    <div class="form-group">
                        <label for="stokBarangEdit">Stok Minimal</label>
                        <input type="number" class="form-control m-2" id="stokBarangEdit" min="0" name="stokBarangEdit" placeholder="stok" required>
                        <input type="hidden" id="idEdit" name="idEdit">
                        <span class="badge badge-info">tidak bisa ubah stok disini</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Delete Data Modal-->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Hapus Data</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form class="user" method="post" id="deleteData">
                <div class="modal-body">
                    <h5 class="namaDataDelete"></h5>
                    <input type="hidden" id="id" name="id">
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>

                </div>
            </form>
        </div>
    </div>
</div>



                        <button class='btn btn-danger btn-sm' data-toggle="modal" data-target="#DeleteModal" data-whatever="${JSON.stringify({ id: data._id, namaBarang: data.namaBarang, kodeBarang: data.kodeBarang, jenisBarang: data.jenis._id, satuanBarang: data.satuan._id, stokBarang: data.stok }).replaceAll('"', "'")}">Hapus</button>

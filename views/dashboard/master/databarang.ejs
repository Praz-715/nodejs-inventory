        $('#tambahData').submit(function(event) {
            event.preventDefault()

            const namaBarang = this.elements['namaBarang'].value
            const jenisBarang = this.elements['jenisBarang'].value
            const satuanBarang = this.elements['satuanBarang'].value
            const stokBarang = this.elements['stokBarang'].value
            const stokBarangMinimal = this.elements['stokBarangMinimal'].value
